          },
          "user": {
            "type": "string",
            "example": "user"
          }
        }
      },
      "SchemaResAllProfilesPerUser": {
        "type": "object",
        "properties": {
          "user": {
            "type": "string",
            "example": "user id"
          },
          "profile": {
            "type": "array",
            "example": "['PROFILE']"
          }
        }
      },
      "SchemaUser": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string",
            "example": "Primary Name"
          },
          "lastName": {
            "type": "string",
            "example": "Secundy Name"
          },
          "email": {
            "type": "string",
            "example": "email@email.com"
          },
          "password": {
            "type": "string",
            "example": "00000000000"
          }
        }
      },
