      }
    },
    "schemas": {
      "SchemaError": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "example": "xxx"
          },
          "message": {
            "type": "string",
            "example": "message"
          }
        }
      },
      "SchemaNewProfile": {
        "type": "object",
        "properties": {
